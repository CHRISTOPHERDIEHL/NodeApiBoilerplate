{
  "name": "NodeApiBoilerplate",
  "version": "0.0.0",
  "description": "The backend for the serono question app",
  "main": "index.js",
  "repository": "git@github.com:CHRISTOPHERDIEHL/NodeApiBoilerplate.git",
  "pre-commit": "lint:staged",
  "author": "Christopher Diehl",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.js": "lint:js"
  },
  "eslintConfig": {
    "env": {
        "node": true
    },
    "rules": {
      "accessor-pairs" : 1,
      "array-callback-return" : 1,
      "block-scoped-var" : 1,
      "class-methods-use-this" : 1,
      "complexity" : 1,
      "consistent-return" : 1,
      "curly" : 1,
      "default-case" : 1,
      "dot-location" : 1,
      "dot-notation" : 1,
      "eqeqeq" : 1,
      "guard-for-in" : 1,
      "no-alert" : 1,
      "no-caller" : 1,
      "no-case-declarations" : 1,
      "no-else-return" : 1,
      "no-empty-function" : 1,
      "no-empty-pattern" : 1,
      "eqeqeq" : 1,
      "no-eval" : 1,
      "no-extend-native" : 1,
      "no-extra-bind" : 1,
      "no-extra-label" : 1,
      "no-fallthrough" : 1,
      "no-floating-decimal" : 1,
      "no-global-assign" : 1,
      "no-implied-eval" : 1,
      "no-implicit-globals" : 1,
      "no-invalid-this" : 1,
      "no-iterator" : 1,
      "no-lone-blocks" : 1,
      "no-loop-func" : 1,
      "no-multi-spaces" : 1,
      "no-multi-str" : 1,
      "no-new-func" : 1,
      "no-new-wrappers" : 1,
      "no-return-assign" : 1,
      "no-return-await" : 1,
      "no-script-url" : 1,
      "no-self-assign" : 1,
      "no-self-compare" : 1,
      "no-sequences" : 1,
      "no-throw-literal" : 1,
      "no-unmodified-loop-condition" : 1,
      "no-unused-expressions" : 1,
      "no-unused-labels" : 1,
      "no-useless-call" : 1,
      "no-useless-concat" : 1,
      "no-useless-escape" : 1,
      "no-useless-return" : 1,
      "no-void" : 1,
      "no-warning-comments" : 1,
      "radix" : 1,
      "require-await" : 1,
      "vars-on-top" : 1,
      "wrap-iife" : 1,
      "yoda" : 1,
    }
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "bluebird": "^3.4.7",
    "body-parser": "^1.15.2",
    "crypto": "0.0.3",
    "express": "^4.14.0",
    "express-jwt": "^5.1.0",
    "jsonwebtoken": "^7.2.1",
    "mongoose": "^4.7.6",
    "morgan": "^1.7.0",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "eslint": "^3.13.1",
    "pre-commit": "^1.2.2"
  },
}
